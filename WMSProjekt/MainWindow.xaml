<Window x:Class="WMSProjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMSProjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:EmployeeViewModel />
    </Window.DataContext>
    <WrapPanel>
        <Border BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="10"
                Padding="4"
                Margin="4"
                >
            <StackPanel Orientation="Vertical">
                <Label Content="Név" FontWeight="Bold"/>
                <TextBlock Text="{Binding Name}" Margin="5 0 0 0"/>
                <Label Content="Adószám" FontWeight="Bold"/>
                <TextBlock Text="{Binding TaxNumber}" Margin="5 0 0 0"/>
                <Label Content="Kivett szabadnapok száma" FontWeight="Bold"/>
                <TextBlock Text="{Binding DaysOff}" Margin="5 0 0 0"/>
            </StackPanel>
        </Border>
    </WrapPanel>
</Window>
